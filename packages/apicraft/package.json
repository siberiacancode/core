{
  "name": "@siberiacancode/apicraft",
  "type": "module",
  "version": "1.0.0",
  "description": "Generate rest api for your api with one command",
  "author": {
    "name": "SIBERIA CAN CODE ðŸ§Š",
    "url": "https://github.com/siberiacancode"
  },
  "license": "MIT",
  "homepage": "https://github.com/siberiacancode/core",
  "repository": {
    "url": "https://github.com/siberiacancode/core"
  },
  "bugs": {
    "url": "https://github.com/siberiacancode/core/issues"
  },
  "keywords": [
    "api",
    "typegen",
    "requests",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    "types": "./dist/src/index.d.ts",
    "import": "./dist/src/index.mjs",
    "require": "./dist/src/index.cjs"
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "apicraft": "dist/bin/bin.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepublishOnly": "yarn type && yarn build",
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --fix",
    "lint-inspector": "npx @eslint/config-inspector",
    "type": "tsc --noEmit",
    "format": "prettier --write .",
    "pretty": "yarn type && yarn lint && yarn format"
  },
  "dependencies": {
    "@hey-api/openapi-ts": "0.80.8",
    "@siberiacancode/fetches": "^1.12.0",
    "cosmiconfig": "^9.0.0",
    "yargs": "^18.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@siberiacancode/eslint": "*",
    "@siberiacancode/prettier": "*",
    "@types/node": "^24.0.4",
    "@types/yargs": "^17.0.33",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
