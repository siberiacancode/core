{
  "name": "@siberiacancode/apicraft",
  "type": "module",
  "version": "1.5.1",
  "description": "Generate rest api for your api with one command",
  "author": {
    "name": "SIBERIA CAN CODE ðŸ§Š",
    "url": "https://github.com/siberiacancode"
  },
  "license": "MIT",
  "homepage": "https://github.com/siberiacancode/core",
  "repository": {
    "url": "https://github.com/siberiacancode/core"
  },
  "bugs": {
    "url": "https://github.com/siberiacancode/core/issues"
  },
  "keywords": [
    "api",
    "typegen",
    "requests",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.mts",
  "bin": {
    "apicraft": "dist/bin/bin.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "yarn type && yarn build",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint . --fix",
    "lint-inspector": "npx @eslint/config-inspector",
    "type": "tsc --noEmit",
    "format": "prettier --write .",
    "pretty": "yarn type && yarn lint && yarn format"
  },
  "dependencies": {
    "@hey-api/openapi-ts": "0.82.5",
    "@siberiacancode/fetches": "^1.13.2",
    "@tanstack/react-query": "^5.90.5",
    "cosmiconfig": "^9.0.0",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@siberiacancode/eslint": "*",
    "@siberiacancode/prettier": "*",
    "@types/node": "^25.2.3",
    "@types/yargs": "^17.0.35",
    "axios": "^1.13.5",
    "tsdown": "^0.20.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
